<div class="container">

  <p>
    <strong>User:</strong>
    <%= @idea.user.name %>
  </p>

  <p>
    <strong>Topic:</strong>
    <%= @idea.topic %>
  </p>

  <p>
    <strong>Method:</strong>
    <%= @idea.method %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @idea.category %>
  </p>

  <p>
    <strong>Element:</strong>
    <%= @idea.element %>
  </p>

  <p>
    <strong>Action:</strong>
    <%= @idea.action %>
  </p>

  <p>
    <strong>Tag:</strong>
    <%= @idea.tag %>
  </p>

  <% if @idea.user == current_user %>
    <%= link_to 'Edit', edit_idea_path(@idea) %> |
  <% end %>
  <%= link_to 'Back', ideas_path %>

</div>

