<div class="container">

  <h1>Ideas</h1>
    <table class="table table-bordered table-inverse">
      <thead class="thead-inverse">
      <tr>
        <th>User</th>
        <th>Topic</th>
        <th>Method</th>
        <th>Category</th>
        <th>Element</th>
        <th>Action</th>
        <th>Tag</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ideas.each do |idea| %>
        <tr>
          <td><%= idea.user.email %></td>
          <td><%= idea.topic %></td>
          <td><%= idea.method %></td>
          <td><%= idea.category %></td>
          <td><%= idea.element %></td>
          <td><%= idea.action %></td>
          <td><%= idea.tag %></td>
          <td><%= link_to 'Show', idea %></td>
          <% if idea.user == current_user %>
            <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
            <td><%= link_to 'Delete', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Idea', new_idea_path %>

</div>
